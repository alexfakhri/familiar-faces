<section class="articles-heading" id="articles-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="articles-heading">Explore Stories</h2>
                <hr class="light">
            </div>
        </div>
    </div>
</section>



<%= link_to 'Add a new story', new_article_path  %>

<% if @articles.all.any?  %>
  <% @articles.all.each do |article| %>
    <h2><%= link_to article.title, article_path(article) %></h2>
  <% end %>
<% else %>
  <h1>No articles yet</h1>
<% end %>


<div id="tag_cloud">
  <% tag_cloud @articles.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>
