<section class="devise-headers">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h3 class="devise-headers-heading">Photographer Profile:</h3>
                  <h2 class="devise-headers-heading"><%= @user.first_name %> <%= @user.last_name %></h2>
                <hr class="light">
            </div>
        </div>
    </div>
</section>

<section class="container">
  <div class="row">
    <div class="col-md-4 user-avitar">
      <%= image_tag @user.avatar.url(:medium), class: "img-responsive" %>
    </div>
    <div class="col-md-8 user-bio">
      <h4>Bio:</h4>
        <p><%= @user.bio %></p>
    </div>
  </div>
</section>


<div class="container related-articles">
  <div class="row">
    <h4>Articles By <%= @user.first_name %> <%= @user.last_name %>: </h4>
      <% @article.each do |article| %>
        <div class="col-xs-6 col-sm-3">
          <div class="clearfix visible-xs-block"></div>
          <%= link_to article.title, article_path(article) %>
          <%= image_tag article.photo.url(:homepage), class: "img-responsive" %>
        </div>
      <% end %>
    </div>
</div>


