Admin Panel

<% if @articles.all.any? %>
  <% @articles.all.each do |article| %>
    <p><%= link_to article.title, article_path(article) %>

      <%= best_in_place article, :visibility, as: :checkbox, collection: {true: "Published", false: "Not Published"} %>

    <%= link_to "Edit Story", edit_article_path(article) %>
    <%= link_to "Delete Story", article_path(article), method: :delete %></p>
  <% end %>
<% else %>
  <h1>No articles yet</h1>
<% end %>
